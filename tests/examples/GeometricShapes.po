class Shape is
    method area : Real => 0.0
end

class Circle extends Shape is
    var radius : 0.0
    this(r: Real) is
        radius := r
    end

    method area : Real => radius.Mult(radius).Mult(3.14159)
end

class Rectangle extends Shape is
    var width  : 0.0
    var height : 0.0
    this(w: Real, h: Real) is
        width  := w
        height := h
    end
    method area : Real => width.Mult(height)
end

class Main is
    this() is
        var s1 : Shape := Circle(5.0)
        var s2 : Shape := Rectangle(4.0, 6.0)
        var total : Real := s1.area.Plus(s2.area)
    end
end